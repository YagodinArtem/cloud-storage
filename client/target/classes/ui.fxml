<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="690.0" prefWidth="538.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="UiController">
    <center>
        <ListView fx:id="listView" prefHeight="550.0" prefWidth="200.0" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>

            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </ListView>
    </center>
    <bottom>
        <VBox prefHeight="88.0" prefWidth="538.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="inputLine" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           minHeight="50.0" minWidth="200.0" onAction="#send" prefHeight="50.0" prefWidth="378.0">

                    <tooltip>
                        <Tooltip text="Введите путь к файлу для загрузки на сервер"/>
                    </tooltip>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </TextField>
                <ToolBar prefHeight="60.0" prefWidth="534.0">
                    <items>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="77.0" minHeight="50.0" minWidth="50.0"
                                mnemonicParsing="false" onMouseClicked="#choseFile" prefHeight="50.0" prefWidth="77.0"
                                text="Chose file" textFill="#9a4c4c"/>

                        <Button maxHeight="1.7976931348623157E308" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                                mnemonicParsing="false" onMouseClicked="#sendFile" text="Send" textFill="#9a4c4c"/>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="77.0" minHeight="50.0" minWidth="50.0"
                                mnemonicParsing="false" onMouseClicked="#reconnect" prefHeight="50.0" prefWidth="77.0"
                                text="Reconnect" textFill="#9a4c4c"/>
                        <TextArea fx:id="status" focusTraversable="false" editable="false" prefHeight="50.0"
                                  prefWidth="311.0"/>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </bottom>
</BorderPane>
